{
	"$schema": "https://biomejs.dev/schemas/2.0.5/schema.json",
	"extends": "//",
	"root": false,
	"vcs": {
		"enabled": false,
		"clientKind": "git",
		"useIgnoreFile": false
	},
	"files": {
		"ignoreUnknown": false,
		"includes": ["src/**/*.*", "!public/**/*.*"]
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "space",
		"indentWidth": 4
	},
	"linter": {
		"enabled": true,
		"rules": {
			"suspicious": {
				"noDuplicateProperties": "off"
			},
			"correctness": {
				"noUnknownProperty": "off"
			},
			"style": {
				"noDescendingSpecificity": "off"
			},
			"recommended": true
		}
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "double"
		}
	},
	"json": {
		"formatter": {
			"enabled": false
		}
	},
	"assist": {
		"enabled": true,
		"actions": {
			"source": {
				"organizeImports": "on"
			}
		}
	}
}
